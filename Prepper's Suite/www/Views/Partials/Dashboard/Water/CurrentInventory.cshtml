<div class="grid-x grid-padding-x">
    <div class="cell">

        <br />
        <div class="grid-x">
            <div class="cell large-22 large-offset-2">
                <div class="grid-x" title="Description info to go here...">
                    <div class="cell large-7">
                        Item Name<i class="fas fa-sort"></i>
                    </div>
                    <div class="cell large-2">
                        #<i class="fas fa-sort"></i>
                    </div>
                    <div class="cell large-3">
                        Amount<i class="fas fa-sort"></i>
                    </div>
                    <div class="cell large-4">
                        Filled<i class="fas fa-sort"></i>
                    </div>
                    <div class="cell large-5">
                        Location<i class="fas fa-sort"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="accordion">
            @{
                for (int i = 0; i < 4; i++)
                {
                    <h5 class="category">
                        <span class="text">Category &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</span>
                    </h5>
                    <div class="content">
                        <div class="content-tree">
                            @{
                                for (int j = 0; j < 8; j++)
                                {
                                    <div class="content-item grid-x">
                                        <span class="cell shrink content-spacer"></span>
                                        <div class="cell auto content-text grid-container">
                                            <div class="grid-x">
                                                <div class="cell large-7">
                                                    Item Name
                                                </div>
                                                <div class="cell large-2">
                                                    #
                                                </div>
                                                <div class="cell large-3">
                                                    16 oz.
                                                </div>
                                                <div class="cell large-5">
                                                    <i class="fas fa-check"></i>
                                                </div>
                                                <div class="cell large-5">
                                                    Location
                                                </div>
                                                <div class="cell large-1">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </div>
                                                <div class="cell large-1">
                                                    <i class="fas fa-times"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
            }

        </div>


    </div>
</div>