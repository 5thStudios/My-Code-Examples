@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<HeroSimple>>

@{
    //Creaet headline
    string headline = "<h1 class='{0}'><strong>{1}</strong><h1>";
    headline = string.Format(headline, Model.Content.HeadlineLevel?.ToLower(), Model.Content.Headline?.ToUpper());
}




<section class="hero-simple" data-blockgrid="blockgrid/Components/heroBanner">
    <div class="grid-container">
        <div class="grid-x grid-margin-x grid-padding-x grid-padding-y">
            <div class="cell text-center">
                @Html.Raw(headline)
            </div>
        </div>
    </div>
</section>