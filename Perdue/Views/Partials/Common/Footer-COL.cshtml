@using www.Models;
@using www.ViewModels;
@model FooterViewModel;



<footer>
    <div class="grid-container">
        <div class="grid-x">
            <div class="cell text-center">
                <br />
                <br class="show-for-laptop" />
                <br class="show-for-laptop" />
                <ul class="show-for-laptop">
                    @for (Int16 i = 0; i < Model.LstFooterNav.Count; i++)
                    {
                        <li>
                            <a href="@Model.LstFooterNav[i].Url" target="@Model.LstFooterNav[i].Target">@Model.LstFooterNav[i].Title</a>
                        </li>
                    }
                </ul>
                <nav class="grid-x grid-padding-y hide-for-laptop">
                    @for (Int16 i = 0; i < Model.LstFooterNav.Count; i++)
                    {
                        <div class="cell">
                            <a href="@Model.LstFooterNav[i].Url" target="@Model.LstFooterNav[i].Target">@Model.LstFooterNav[i].Title</a>
                        </div>
                    }
                    <br />
                    <br />
                    <br />
                </nav>
                <h6>@Html.Raw(Model.CopyrightText)</h6>
                <br />
            </div>
        </div>
    </div>


    <div class="grid-container">
        <div class="cookie-Policy grid-x">
            <div class="cell">
                <img src="/images/icons/xmark-solid.svg" class="svg-btn" id="cookie-close" />
                <div class="tbl">
                    <div class="tbl-row">
                        <div class="tbl-cell">
                            <button id="cookie-acknowledge" title="Accept" class="btn btn-blue bannerAcceptButton">Accept</button>
                        </div>
                        <div class="tbl-cell">
                            By continuing to use and navigate this website, you are agreeing to the use of cookies.&nbsp;
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</footer>