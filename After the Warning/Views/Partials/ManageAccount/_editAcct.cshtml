            <div class="cell large-12">
                <h4>@Html.DisplayNameFor(m => m.Password)</h4>
                @Html.PasswordFor(m => m.Password)
            </div>
            <div class="cell large-12">
                <h4>@Html.DisplayNameFor(m => m.ConfirmPassword)</h4>
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>
        </div>
