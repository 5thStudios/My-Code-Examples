@inherits UmbracoViewPage<Models.MembershipModel>


@{
    if (!User.Identity.IsAuthenticated)
    {
        Response.Redirect(Umbraco.Content((int)(Models.Common.siteNode.CreateAccount)).Url());
    }
}


@using (Html.BeginUmbracoForm<Controllers.MembershipController>("SubmitForm_UpdateMember", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.memberId)

    <p>Updating your account?  No problem.  Simply update your credentials below and save your changes. It’s that easy.</p>
    <br />

    <div class="grid-x grid-padding-x">
        <div class="cell large-12">
            <h4>@Html.DisplayNameFor(m => m.FirstName)</h4>
            @Html.TextBoxFor(m => m.FirstName)
            <h6 class="text-right">@Html.ValidationMessageFor(m => m.FirstName)</h6>
        </div>
        <div class="cell large-12">
            <h4>@Html.DisplayNameFor(m => m.LastName)</h4>
            @Html.TextBoxFor(m => m.LastName)
            <h6 class="text-right">@Html.ValidationMessageFor(m => m.LastName)</h6>
        </div>
    </div>
    <div class="grid-x grid-padding-x">
        <div class="cell large-12">
            <h4>@Html.DisplayNameFor(m => m.Email)</h4>
            @Html.TextBoxFor(m => m.Email)
            <h6 class="text-right">@Html.ValidationMessageFor(m => m.Email)</h6>
        </div>
        <div class="cell large-12">
            <h4>@Html.DisplayNameFor(m => m.ConfirmEmail)</h4>
            @Html.TextBoxFor(m => m.ConfirmEmail)
            <h6 class="text-right">@Html.ValidationMessageFor(m => m.ConfirmEmail)</h6>
        </div>
    </div>


    <br />
    <div class="grid-x grid-padding-x">
        <div class="cell">
            <h4>
                @Html.DisplayNameFor(m => m.Subscribed)
                &nbsp;&nbsp;&nbsp;
                @Html.CheckBoxFor(m => m.Subscribed)
            </h4>
        </div>
    </div>


    <br />
    <br />
