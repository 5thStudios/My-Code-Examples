@using Models;
@inherits UmbracoViewPage<Models.LineCharts>


<div class="grid-x">
    <div class="cell text-center">
        <canvas id="canvasExpByAge"></canvas>
    </div>
</div>


<script>
    $(window).on("load", function() {
        var AgeRanges = @Html.Raw(Model.jsonAgeRange);
        var config = {
            type: 'line',
            data: {
                labels: AgeRanges,
                datasets: [
                    @foreach(ChartDataset chart in Model.LstChartData)
                    {

                       @: {
                       @:      label: '@chart.Label',
                       @:      backgroundColor: '@chart.Color',
                       @:      borderColor: '@chart.Color',
                       @:      borderWidth: 2,
                       @:      data: @chart.JsonData,
                       @:      fill: false
                       @:  },
                    }
                ]
            },
            options: {
                steppedLine: false,
                responsive: true,
                legend: {
                    position: 'top'
                },
                title: {
                    display: false,
                    text: ''
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Age Range'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Experience Type Count'
                        }
                    }]
                }
            }
        };

        //Run canvas chart
        var ctx = document.getElementById('canvasExpByAge').getContext('2d');
        window.myLine = new Chart(ctx, config);
    });
</script>