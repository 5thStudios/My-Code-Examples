@inherits UmbracoViewPage<bl.Models.Login>




@using (Html.BeginUmbracoForm<bl.Controllers.blMemberController>(bl.Models.Common.Action.SubmitSignUp))
{
    @Html.AntiForgeryToken()

    <div class="grid-x grid-padding-y grid-margin-x">
        <div class="cell medium-12">
            @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Email Address", @required = "required" })
            <h6>@Html.ValidationMessageFor(m => m.UserName)</h6>
        </div>
        <div class="cell medium-12">
            @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @required = "required" })
            <h6>@Html.ValidationMessageFor(m => m.Password)</h6>
        </div>
    </div>

    <div class="grid-x grid-padding-y">
        <div class="cell shrink">
            <input id="termsOfUse179" type="checkbox" name="termsOfUse179" required="required">&nbsp;&nbsp;&nbsp;
        </div>
        <div class="cell auto">
            <label for="termsOfUse179" class="termsOfUseLabel">
                <span class="show">
                    I agree to the <strong><a href="/terms-of-use/">Terms of Use</a></strong> and <strong><a href="/privacy-policy/">Privacy Policy</a></strong>
                </span>
            </label>
        </div>
    </div>

    <div class="grid-x grid-padding-y grid-margin-x">
        <div class="cell text-center">
            <button value="" name="FormSubmit" class="orange">Sign Up</button>
        </div>
    </div>

    @*<div class="grid-x grid-padding-y grid-margin-x">
        <div class="cell">
            @Html.ValidationSummary()
        </div>
    </div>*@
}