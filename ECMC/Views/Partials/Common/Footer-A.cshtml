@using ECMC_Umbraco.Models;
@using UmbracoProject.Models;
@model FooterViewModel;


<footer>
    <div class="grid-container"> 
        <div class="grid-x">
            <div class="cell small-offset-2 small-20 def-padding-t  ">
                <div class="grid-x grid-margin-x grid-margin-y">

                    <div class="cell small-24 medium-5">
                        <a href="/">
                            <img src="@Model.SiteLogoUrl" alt="@Model.SiteName" class="logo">
                        </a>
                    </div>

                    <div class="cell small-24 medium-6">
                        @for (int i = 0; i < Model.LstFooterNavLinks?.Count; i++)
                        {
                            if (i % 3 == 0)
                            {
                                <div>
                                    @if (Model.LstFooterNavLinks[i].IsMedia)
                                    {
                                        <a href="@Model.LstFooterNavLinks[i].Url" target="_blank">
                                          
                                            @Model.LstFooterNavLinks[i].Title
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Model.LstFooterNavLinks[i].Url">@Model.LstFooterNavLinks[i].Title</a>
                                    }
                                </div>
                            }
                        }
                    </div>

                    <div class="cell small-24 medium-6">
                        @for (int i = 0; i < Model.LstFooterNavLinks?.Count; i++)
                        {
                            if ((i - 1) % 3 == 0)
                            {
                                <div>
                                    @if (Model.LstFooterNavLinks[i].IsMedia)
                                    {
                                        <a href="@Model.LstFooterNavLinks[i].Url" target="_blank">
                                            
                                            @Model.LstFooterNavLinks[i].Title
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Model.LstFooterNavLinks[i].Url">@Model.LstFooterNavLinks[i].Title</a>
                                    }
                                </div>
                            }
                        }
                    </div>

                    <div class="cell small-24 medium-6">
                        @for (int i = 0; i < Model.LstFooterNavLinks?.Count; i++)
                        {
                            if ((i - 2) % 3 == 0)
                            {
                                <div>
                                    @if (Model.LstFooterNavLinks[i].IsMedia)
                                    {
                                        <a href="@Model.LstFooterNavLinks[i].Url" target="_blank">
                                          
                                            @Model.LstFooterNavLinks[i].Title
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Model.LstFooterNavLinks[i].Url">@Model.LstFooterNavLinks[i].Title</a>
                                    }
                                </div>
                            }
                        }
                    </div>



                    <div class="cell small-24 text-center">
                        <p class="copyright">
                            © @DateTime.Today.Year @Model.SiteName. <br class="show-for-small-only" />All Rights Reserved. &nbsp; | &nbsp; <a href="/privacy-policy">Privacy Policy</a> &nbsp; | &nbsp; <a href="/terms-of-use">Terms of Use</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</footer>