@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using ECMC_Umbraco.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<CallToAction>>

@{
    //Instantiate variables
    var cmModel = Model.Content;
    var linkStyle = cmModel.CTalinkStyle;
}



<div data-blockgrid="Components/callToAction" class="" style="">


                    @if (!string.IsNullOrWhiteSpace(cmModel.CTalink?.Name))
                    {
                        <p><a class="@linkStyle" target="@cmModel.CTalink.Target" href="@cmModel.CTalink.Url">@cmModel.CTalink.Name</a></p>
                    }


</div>